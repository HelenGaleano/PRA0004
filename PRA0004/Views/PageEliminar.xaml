<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRA0004.Views.PageEliminar"
             BackgroundImageSource="ihs.jpg">
    <ContentPage.Content>
        <StackLayout >
            <Label Text="Id"
                       HorizontalOptions="Start"
                       FontSize="20"
                       TextColor="Black"
                       Margin="30,0,10,0"/>
            <Entry Keyboard="Numeric"
                       x:Name="id"
                       Placeholder="Id pago"
                       Margin="30,0,30,0"
                       BackgroundColor="MistyRose"/>
            <Button Text="Eliminar" 
                    Font="large" 
                    BorderWidth="2" 
                    x:Name="btnEliminar"
                    BorderColor="Black"
                    VerticalOptions="CenterAndExpand"
                    Margin="50,20,50,20"
                    Clicked="btnEliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>